<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/square_bg_color"
    android:id="@+id/cardview_item_recyclerview_question_list"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question No"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_quesNoQuizQuestionList"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Score : 1"
                android:textColor="@color/text_green_color"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/example_desc"
            android:textColor="@android:color/white"
            android:id="@+id/tv_quesDescQuiz"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct Option"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_green_color" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:paddingTop="6dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_corr"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#397704"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_line_desc"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_corrOpt"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choosen Option"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#026488"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/example_line_desc"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_choosenOpt"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#06FFF7"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#373A38"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_OptQuiz"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>