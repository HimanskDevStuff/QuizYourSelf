<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    tools:context=".JoinedQuizes.QuizResult.ResultActivity">

    <fragment
        android:id="@+id/frag_host_result"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavResult"
        android:layout_alignParentTop="true"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_result" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/nav_bottom_color"
        app:itemTextColor="@drawable/nav_bottom_color"
        android:background="#1C1C1C"
        app:menu="@menu/menu_bottom_quiz_result"/>

</RelativeLayout>